{
  "functions": {
    "app/api/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/*/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/*/*/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "framework": {
    "maxRequestBodySize": "50mb"
  },
  "crons": [
    {
      "path": "/api/agent-tasks/scheduler/process",
      "schedule": "* * * * *"
    }
  ]
}