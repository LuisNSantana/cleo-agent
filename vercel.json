{
  "functions": {
    "app/api/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024,
      "maxRequestBodySize": "50mb"
    },
    "app/api/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024,
      "maxRequestBodySize": "50mb"
    },
    "app/api/*/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024,
      "maxRequestBodySize": "50mb"
    },
    "app/api/*/*/*/*/route.ts": { 
      "maxDuration": 300,
      "memory": 1024,
      "maxRequestBodySize": "50mb"
    }
  },
  "crons": [
    {
      "path": "/api/agent-tasks/scheduler/process",
      "schedule": "* * * * *"
    }
  ]
}