{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".tmp-tests",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": false,
    "lib": ["ES2020"],
  "isolatedModules": false,
  "incremental": false,
  "baseUrl": ".",
    "paths": {
      "@supabase/supabase-js": ["tests/stubs/supabase-js"],
      "@/lib/logger": ["tests/stubs/lib/logger"],
      "@/lib/prompts": ["tests/stubs/lib/prompts"],
      "@/lib/tools/delegation": ["tests/stubs/lib/tools/delegation"],
      "@langchain/core/messages": ["tests/stubs/langchain/messages"]
    },
  "types": ["node", "jest"],
    "declaration": false,
    "sourceMap": false
  },
  "include": ["tests/global.d.ts", "tests/**/*.ts", "lib/tools/context-wrapper.ts"],
  "exclude": ["node_modules"]
}
